@model Team

<div class="container">
    <h2>Create New Team</h2>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name">Team Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Select Characters</label>
            <select multiple class="form-control" name="CharacterIds">
                @foreach (var character in ViewBag.Characters)
                {
                    <option value="@character.Id">@character.Name</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Create Team</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Back to Home</a>
    </form>
</div>
