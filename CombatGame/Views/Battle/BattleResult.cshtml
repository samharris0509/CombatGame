@model Battle

<div class="container">
    <h2 class="text-center mb-4">Battle Results</h2>

    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    <h3>Team 1: @Model.Team1.Name</h3>
                </div>
                <div class="card-body">
                    <p>Characters: @Model.Team1.Characters.Count</p>
                </div>
            </div>
        </div>

        <div class="col-md-2 text-center d-flex align-items-center justify-content-center">
            <h3>VS</h3>
        </div>

        <div class="col-md-5">
            <div class="card">
                <div class="card-header">
                    <h3>Team 2: @Model.Team2.Name</h3>
                </div>
                <div class="card-body">
                    <p>Characters: @Model.Team2.Characters.Count</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-primary">Start New Battle</a>
    </div>
</div>
